# Configuración del entorno para EQHuma API Manager

# Entorno (development, production, test)
NODE_ENV=development

# Puerto para el servidor
PORT=5000

# URL del cliente para CORS
CLIENT_URL=http://localhost:3000

# Configuración de base de datos MongoDB
MONGO_URI=mongodb://localhost:27017/eqhuma-api-manager

# Configuración JWT
JWT_SECRET=tu_secreto_seguro_para_jwt_reemplazar_en_produccion
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Configuración de correo electrónico (para recuperación de contraseña y verificaciones)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=usuario_smtp
SMTP_PASSWORD=contraseña_smtp
FROM_EMAIL=noreply@eqhuma.com
FROM_NAME=EQHuma

# Configuración de límites de API
MAX_API_RATE_LIMIT_WINDOW=15m
MAX_API_RATE_LIMIT=100

# Configuración de análisis de tráfico
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Configuración de almacenamiento de logs
LOG_LEVEL=info