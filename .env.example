### MongoDB ###
MONGO_URI=mongodb://mongodb:27017/eqhuma-web

### API Manager (services/api-manager/.env) ###
NODE_ENV=development
PORT=5000
MONGO_URI=${MONGO_URI}
JWT_SECRET=<tu_jwt_secret>
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
CLIENT_URL=http://localhost:3000
SMTP_HOST=<smtp_host>
SMTP_PORT=<smtp_port>
SMTP_USER=<smtp_user>
SMTP_PASSWORD=<smtp_password>
FROM_EMAIL=noreply@eqhuma.com
FROM_NAME=EQHuma
ENABLE_API_DOCS=true
CORS_ORIGIN=http://localhost:3000

### Courses (services/courses/.env) ###
PORT=4000
MONGO_URI=${MONGO_URI}
JWT_SECRET=<tu_jwt_secret> 
CLIENT_URL=http://localhost:3000

### Webinars (services/webinars/.env) ###
PORT=5002
MONGO_URI=${MONGO_URI}
JWT_SECRET=<tu_jwt_secret>
CLIENT_URL=http://localhost:3000
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=${FROM_EMAIL}
FROM_NAME=${FROM_NAME}

### API Market (services/apimarket-api/.env) ###
PORT=5003
MONGO_URI=${MONGO_URI}
JWT_SECRET=<tu_jwt_secret>
CLIENT_URL=http://localhost:3000

### Frontend (frontend/.env) ###
REACT_APP_API_MANAGER_URL=http://localhost:5000
REACT_APP_COURSES_URL=http://localhost:4000
REACT_APP_WEBINARS_URL=http://localhost:5002
REACT_APP_APIMARKET_URL=http://localhost:5003
